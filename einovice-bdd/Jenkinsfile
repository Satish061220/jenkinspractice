pipeline {
    agent any

    stages {
        stage('Check File Path') {
            steps {
                script {
                    def path = 'einovice-bdd/Jenkinsfile'
                    if (fileExists(path)) {
                        echo "Path exists: ${path}"
                    } else {
                        echo "Path does not exist: ${path}"
                    }
                }
            }
        }
    }
}
