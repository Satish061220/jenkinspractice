pipeline {
    agent any

    environment {
        PROJECT_DIR = 'einovice-bdd'
    }

    stages {
        stage('Checkout') {
            steps {
                echo "Checking out source code..."
                checkout scm
            }
        }

        stage('Validate Jenkinsfile') {
            steps {
                script {
                    def jenkinsfilePath = "${env.PROJECT_DIR}\\Jenkinsfile"
                    if (fileExists(jenkinsfilePath)) {
                        echo "Jenkinsfile exists at: ${jenkinsfilePath}"
                    } else {
                        error "Jenkinsfile not found at: ${jenkinsfilePath}"
                    }
                }
            }
        }

        stage('Build') {
            steps {
                echo "Building with Maven..."
                dir("${env.PROJECT_DIR}") {
                    bat 'mvn clean install'
                }
            }
        }

        stage('Test') {
            steps {
                echo "Running Maven tests..."
                dir("${env.PROJECT_DIR}") {
                    bat 'mvn test'
                }
            }
        }

        stage('Archive') {
            steps {
                echo "Archiving artifacts..."
                dir("${env.PROJECT_DIR}") {
                    archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
                }
            }
        }

     stage('Run Cucumber Tests') {
    steps {
        echo "Running Cucumber tests from shaded JAR..."
        dir("${env.PROJECT_DIR}\\target") {
            withEnv(["CUCUMBER_PUBLISH_ENABLED=true"]) {
                bat '"\"C:\\Program Files\\Java\\jdk-21.0.7\\bin\\java.exe\" -jar einovice-bdd-0.0.1-SNAPSHOT-shaded.jar"'
            }
        }
    }
}

        stage('Deploy') {
            steps {
                echo "Deploying application..."
                // Add your deployment steps here
            }
        }

        // Optional cleanup stage
        // stage('Clean Up') {
        //     steps {
        //         echo "Cleaning workspace..."
        //         deleteDir()
        //     }
        // }
    }
}
